<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout android:id="@+id/sign_in_bar"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        >

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="sign in or die!!!"
            android:layout_marginLeft="10dp"
            android:textColor="#808080" />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nekouříte již:"
            android:id="@+id/textView2"
            android:autoText="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="101 dní, 10 hodin a 13 minut"
            android:id="@+id/textView"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:singleLine="false"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Úspory"
            android:id="@+id/textView3"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3 635 Kč"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1d 10h 10m"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignRight="@+id/textView"
            android:textStyle="bold" />

        <View
            android:background="#aaa"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="16dp"
            android:id="@+id/view"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAIL - kouřil jsem"
            android:id="@+id/button2"

            android:textColor="#000"
            android:width="100dp"
            android:height="100dp"

            android:layout_below="@+id/view"
            android:layout_alignLeft="@+id/button4"
            android:layout_marginBottom="16dp"
            android:layout_alignRight="@+id/view" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Žebříčky"
            android:id="@+id/button3"
            android:textColor="#000"
            android:height="100dp"
            android:width="100dp"
            android:layout_alignTop="@+id/button4"
            android:layout_toLeftOf="@+id/view2"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odměny"
            android:id="@+id/button4"
            android:textColor="#000"
            android:width="100dp"
            android:height="100dp"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@+id/button3"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignRight="@+id/view3" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dal bych si..."
            android:id="@+id/button"
            android:textColor="#000"
            android:width="100dp"
            android:height="100dp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/button3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dnes jste již měl chuť na 5 cigaret, ale nedal jste si ani jednu. gratulujeme"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp" />


        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#aaa"
            android:layout_alignTop="@+id/button2"
            android:layout_centerHorizontal="true"
            android:id="@+id/view2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#aaa"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:id="@+id/view3" />
    </RelativeLayout>

</RelativeLayout>
